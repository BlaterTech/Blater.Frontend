@inherits BaseValueAutoComponent<List<Blater.Models.Storage.StorageFileInfo>>
@using Blater.Frontend.Client.Auto.AutoModels.Base
@using Blater.Frontend.Client.Auto.AutoModels.Enumerations
@implements Blater.Frontend.Client.Auto.Interfaces.IAutoBuildableComponent

<FileDetails
    EditMode="@EditMode"
    ContainerName="@ParentId.ToString()"
    Files="@Value"
/>

@code
{
    public int Priority => 1000;
    public BaseAutoComponentTypeEnumeration ComponentType => AutoTableComponentType.AutoFileDetails;
    
    [CascadingParameter(Name = "ParentId")]
    public Guid? ParentId { get; set; }

    [Parameter]
    [EditorRequired]
    public bool ShowFiles { get; set; }
    
    [Parameter]
    public int MaxFileCount { get; set; } = int.MaxValue;
    
    [Parameter]
    public string? TitleType { get; set; }
}