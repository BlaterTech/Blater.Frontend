<MudTimeline
    TimelineOrientation="TimelineOrientation.Horizontal"
    TimelinePosition="TimelinePosition.Top"
    Reverse="false"
    TimelineAlign="TimelineAlign.Default">
    @foreach (var (key, value) in StepsAndTexts)
    {
        <MudTimelineItem
            Color="@(CurrentStep >= key ? Color.Primary : Color.Surface)"
            Variant="Variant.Filled"
            Size="Size.Large">
            <ItemDot>
                @if (CurrentStep > key)
                {
                    <MudIcon Icon="@Material.Filled.Done"/>
                }
                else
                {
                    <MudText>
                        @key
                    </MudText>
                }
            </ItemDot>
            <ItemContent>
                <MudText
                    Color="@(CurrentStep >= key ? Color.Primary : Color.Default)"
                    Align="Align.Center">
                    @LocalizationService.GetValue($"TimeLine-{value}")
                </MudText>
            </ItemContent>
        </MudTimelineItem>
    }
</MudTimeline>