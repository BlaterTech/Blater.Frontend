@inherits BaseAutoFormComponent<bool>
@using Blater.Frontend.Client.Auto.AutoModels
@implements Blater.Frontend.Client.Auto.Interfaces.IAutoBuildableComponent

<div id="auto-toggle-input" class="@ExtraClass">
    <MudSwitch
        T="bool"
        Value="@Value"
        Disabled="@Disabled"
        Error="@HasValidationError"
                ErrorText="@ValidationErrorMessage"
                RequiredError="@ValidationErrorMessage"
        ValueChanged="@Callback"
        Label="@LabelName"
        LabelPosition="LabelPosition.Start"
        Color="Color.Primary"
        Class="align-start pl-4"
        Required="@Required"/>
</div>


@code
{
    public BaseAutoComponentTypeEnumeration ComponentType => AutoFormInputType.AutoSwitchInput;

    private async Task Callback(bool obj)
    {
        Value = obj;
        await ValueChanged.InvokeAsync(Value);
    }
}