@inherits BaseAutoFormComponent<string>

@using Blater.Frontend.Client.Auto.AutoModels.Base
@using Blater.Frontend.Client.Auto.AutoModels.Enumerations
@implements Blater.Frontend.Client.Auto.Interfaces.IAutoBuildableComponent

<div id="auto-text-input" class="@ExtraClass">
    <MudTextField
        id="@InputId"
        T="string"
        Disabled="Disabled"
        Class="@ExtraClass"
        Placeholder="@PlaceholderText"
        Value="@Value"
        ValueChanged="@(x => NotifyValueChanged(x))"
        Label="@LabelName"
        Error="@HasValidationError"
        ErrorText="@ValidationErrorMessage"
        RequiredError="@ValidationErrorMessage"
        Required="@Required"
        Variant="@Variant.Filled"
        />
</div>

@code
{
    public BaseAutoComponentTypeEnumeration ComponentType => AutoFormComponentInputType.AutoTextComponentInput;
}