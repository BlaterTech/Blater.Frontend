@inherits BaseAutoFormComponent<decimal>
@using Blater.Frontend.Client.Auto.AutoModels.Base
@using Blater.Frontend.Client.Auto.AutoModels.Enumerations
@implements Blater.Frontend.Client.Auto.Interfaces.IAutoBuildableComponent

<div id="auto-decimal-input" class="@ExtraClass">
    <MudNumericField
        T="decimal"
        Disabled="Disabled"
        Class="@ExtraClass"
        Value="@Value"
        ValueChanged="@Callback"
        Label="@LabelName"
        Error="@HasValidationError"
        ErrorText="@ValidationErrorMessage"
        RequiredError="@ValidationErrorMessage"
        Required="@Required"
        Variant="@Variant.Filled"/>
</div>


@code
{
    
    public BaseAutoComponentTypeEnumeration ComponentType => AutoFormComponentInputType.AutoDecimalComponentInput;
    
    private async Task Callback(decimal obj)
    {
        await NotifyValueChanged(obj);
    }
}