@inherits Blater.Frontend.Client.Auto.AutoBuilders.Base.BaseAutoFormComponent<decimal>
@implements Blater.Frontend.Client.Auto.AutoInterfaces.IAutoBuildableComponent

<div id="auto-decimal-input" class="@ExtraClass">
    <MudNumericField
        T="decimal"
        Disabled="Disabled"
        Class="@ExtraClass"
        Value="@Value"
        ValueChanged="@(async x => await NotifyValueChanged(x))"
        Label="@LabelName"
        Error="@HasValidationError"
        ErrorText="@ValidationErrorMessage"
        RequiredError="@ValidationErrorMessage"
        Required="@Required"
        Variant="@Variant.Filled"/>
</div>


@code
{
    
    public BaseAutoComponentTypeEnumeration ComponentType => AutoComponentInputType.AutoDecimalComponentInput;
}