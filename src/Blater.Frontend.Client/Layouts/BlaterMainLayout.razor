@using Blater.Extensions
@using Blater.Frontend.Client.Models.Tenant
@inherits LayoutComponentBase

<MudRTLProvider>
    <MudThemeProvider IsDarkMode="@TenantData.TenantTheme.IsDarkMode" Theme="@TenantData.TenantTheme.Theme"/>
    <MudPopoverProvider />
    <MudSnackbarProvider/>
    <MudDialogProvider FullWidth="true" MaxWidth="MaxWidth.ExtraSmall"/>
    @Body
</MudRTLProvider>

@code
{
    [Inject]
    protected TenantData TenantData { get; set; } = default!;

    protected override void OnInitialized()
    {
        Console.WriteLine(TenantData.ToJson());
    }
}
