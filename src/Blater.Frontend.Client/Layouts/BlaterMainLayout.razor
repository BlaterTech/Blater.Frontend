@using Blater.Frontend.Client.Interfaces
@inherits LayoutComponentBase

<MudThemeProvider Theme="@MudTheme"/>
<MudSnackbarProvider/>
<MudDialogProvider/>
<MudPopoverProvider/>

@Body

@code
{
    [Inject]
    protected ITenantThemeConfigurationService ThemeConfigurationService { get; set; } = default!;
    
    [Inject]
    protected INavigationService NavigationService { get; set; } = default!;
    
    [Inject]
    protected ILocalizationService LocalizationService { get; set; } = default!;
    
    protected MudTheme MudTheme => ThemeConfigurationService.GetMudTheme();
}
