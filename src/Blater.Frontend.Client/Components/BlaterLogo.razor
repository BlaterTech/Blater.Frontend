@using Blater.Frontend.Client.Contracts.Tenant

<div class="d-flex align-center @(ContainsIcon ? "gap-1" : "")">
    
    @if (ContainsIcon)
    {
        <MudImage
            Class="@IconClass"
            Src="@TenantData.TenantTheme.NavMenuIconLogo"
            Width="@TenantData.TenantTheme.NavMenuLogoIconWidth">
        </MudImage>
    }
    
    @if (!OnlyIcon)
    {
        <MudImage
            Class="@ImageClass"
            Src="@TenantData.TenantTheme.NavMenuLogo"
            Width="@TenantData.TenantTheme.NavMenuLogoWidth">
        </MudImage>
    }
    
</div>

@code
{
    [Parameter]
    public bool ContainsIcon { get; set; } = true;
    
    [Parameter]
    public bool OnlyIcon { get; set; }
    
    [Parameter]
    public string IconClass { get; set; } = "pa-1";
    
    [Parameter]
    public string ImageClass { get; set; } = "pa-1";
    
    [Parameter]
    [EditorRequired]
    public TenantData TenantData { get; set; } = null!;
}
