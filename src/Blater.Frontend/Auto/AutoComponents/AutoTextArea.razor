@inherits Blater.FrontEnd.Auto.Bases.BaseValueAutoComponent<string>
@using Blater.Enumerations.AutoModel
@implements IAutoBuildableComponent

<div id="auto-text-area" class="flex flex-col @ExtraClass">
    @if (!string.IsNullOrEmpty(LabelName))
    {
        <MudText>@LabelName</MudText>
    }
    <MudText
        Class="text-sm text-neutral-700">
        @ValueAsString
    </MudText>
</div>

@code {

    public int Priority => 1000;

    public BaseAutoComponentTypeEnumeration ComponentType => AutoComponentType.AutoTextArea;
}