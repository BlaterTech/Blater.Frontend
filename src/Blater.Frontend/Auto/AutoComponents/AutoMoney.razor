@inherits Blater.FrontEnd.Auto.Bases.BaseValueAutoComponent<decimal>
@using System.Globalization
@using Blater.Enumerations.AutoModel
@implements IAutoBuildableComponent

<div id="auto-money-table" class="@ExtraClass">
    @if (!string.IsNullOrEmpty(LabelName))
    {
        <MudText>@LabelName</MudText>
    }
    <MudText
        Class="text-sm">
        @(Value.ToString("C", CultureInfo.GetCultureInfo("pt-BR")))
    </MudText>
</div>

@code
{
    public int Priority => 1000;

    public BaseAutoComponentTypeEnumeration ComponentType => AutoComponentType.AutoMoney;

}