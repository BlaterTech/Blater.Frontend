@inherits Blater.Frontend.Auto.Bases.BaseValueAutoComponent<string>
@implements IAutoBuildableComponent

<div id="auto-text-link" class="flex flex-col @ExtraClass">

    @*<a class="text-sm text-neutral-700  underline decoration-solid decoration-inherit" 
       href="@Value"
       target="_blank">
        @Value
    </a>*@
    @if (!string.IsNullOrEmpty(LabelName))
    {
        <MudText>@LabelName</MudText>
    }
    <MudLink
        Href="@Value"
        Target="_blank"
        Underline="Underline.Always">
        @Value
    </MudLink>
    \
</div>

@code {
#pragma warning disable CA2252
    public int Priority => 1000;

    public BaseAutoComponentTypeEnumeration ComponentType => AutoComponentType.AutoTextLink;
#pragma warning restore CA2252
}