@inherits Blater.Frontend.Auto.Bases.BaseValueAutoComponent<bool>
@using Blater.Frontend.Services
@implements IAutoBuildableComponent

@inject LocalizationService LocalizationService

<div id="auto-text-status" class="@ExtraClass">
    @if (!string.IsNullOrEmpty(LabelName))
    {
        <MudText>@LabelName</MudText>
    }
    @if (Value)
    {
        <MudText
            Class="text-sm text-neutral-700"
            Style="color: #26b050">
            @LocalizationService.Get($"{TypeName}-{true}")
        </MudText>
    }
    else
    {
        <MudText Class="text-sm text-neutral-700">@LocalizationService.Get($"{TypeName}-{false}")</MudText>
    }
</div>

@code
{
#pragma warning disable CA2252
    public int Priority => 1000;

    public BaseAutoComponentTypeEnumeration ComponentType => AutoComponentType.AutoTextStatus;
    
#pragma warning restore CA2252
}