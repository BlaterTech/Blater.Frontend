@inherits Blater.Frontend.Auto.Bases.BaseAutoFormComponent<string>
@implements IAutoBuildableComponent

<div id="auto-text-area-input" class="@ExtraClass">
    <MudTextField
        T="string"
        id="@InputId"
        Disabled="Disabled"
        Class="@ExtraClass"
        Value="@Value"
        ValueChanged="@ValueChanged"
        Placeholder="@PlaceholderText"
        Label="@LabelName"
        Error="@HasValidationError"
                ErrorText="@ValidationErrorMessage"
                RequiredError="@ValidationErrorMessage"
        Required="@Required"
        Variant="@Variant.Filled"
        Text="@Value"
        AutoGrow="true"
        Lines="3"/>
</div>


@code
{

#pragma warning disable CA2252

    public BaseAutoComponentTypeEnumeration ComponentType => AutoFormInputType.AutoTextAreaInput;
    
#pragma warning restore CA2252
}