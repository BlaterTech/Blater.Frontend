@inherits Blater.Frontend.Auto.Bases.BaseAutoFormComponent<decimal>
@implements IAutoBuildableComponent

<div id="auto-decimal-input" class="@ExtraClass">
    <MudNumericField
        T="decimal"
        Disabled="Disabled"
        Class="@ExtraClass"
        Value="@Value"
        ValueChanged="@Callback"
        Label="@LabelName"
        Error="@HasValidationError"
        ErrorText="@ValidationErrorMessage"
        RequiredError="@ValidationErrorMessage"
        Required="@Required"
        Variant="@Variant.Filled"/>
</div>


@code
{
#pragma warning disable CA2252
    public BaseAutoComponentTypeEnumeration ComponentType => AutoFormInputType.AutoDecimalInput;
    
    private async Task Callback(decimal obj)
    {
        await NotifyValueChanged(obj);
    }
    
#pragma warning restore CA2252
}